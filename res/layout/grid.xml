<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layoutGridV"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<View
		android:background="#ddd"
		android:layout_width="wrap_content"
		android:layout_height="4px" />
	<LinearLayout
		android:id="@+id/layoutGrid"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">
		<TextView
			android:id="@+id/item1"
			android:text="1"
			android:gravity="center"
			android:width="100dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" />
		<View
			android:background="#ddd"
			android:layout_width="2px"
			android:layout_height="match_parent" />
		<TextView
			android:id="@+id/item2"
			android:text="2"
			android:gravity="center"
			android:width="100dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" />
		<View
			android:background="#ddd"
			android:layout_width="2px"
			android:layout_height="match_parent" />
		<TextView
			android:id="@+id/item3"
			android:text="3"
			android:gravity="center"
			android:width="200dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" />
		<View
			android:background="#ddd"
			android:layout_width="2px"
			android:layout_height="match_parent" />
		<TextView
			android:id="@+id/item4"
			android:text="4"
			android:gravity="center"
			android:width="70dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" />
		<View
			android:background="#ddd"
			android:layout_width="2px"
			android:layout_height="match_parent" />
		<TextView
			android:id="@+id/item5"
			android:text="5"
			android:gravity="center"
			android:width="100dp"
			android:layout_width="wrap_content"
			android:layout_height="match_parent" />
	</LinearLayout>
	<TextView
		android:id="@+id/item6"
		android:text="6"
		android:background="#a005"
		android:gravity="center_vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1" />
</LinearLayout>